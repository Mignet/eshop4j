	<select id="getFeebalanceList" resultType="com.eshop4j.web.response.tc.FeebalanceListResponse">
		SELECT
			<!-- fb.user_id userId, -->
			fp.user_mobile mobile,
			fp.user_name name,
			IFNULL(SUM(fp.fee_amount), 0) amount,
			count(fp.bill_id) count,
			MAX(fp.`month`) time,
			MAX(fp.create_time) sendTime
		FROM
			tcim_fee_pay fp 
			<where>
				1=1
				<if test=" null != mobile and ''!= mobile  ">
					AND fp.user_mobile = #{mobile}
				</if>
			</where>
		GROUP BY
			fp.user_mobile
	</select>
	
	<select id="getFeebalanceRecordByMobile" resultType="com.eshop4j.web.response.tc.FeebalanceListResponse">
		SELECT
			<!-- fb.user_id userId, -->
			fp.user_mobile mobile,
			fp.user_name name,
			IFNULL(fp.fee_amount,0) amount,
			fp.`month` time,
			fp.create_time sendTime,
			fp.status
		FROM
			tcim_fee_pay fp 
			<where>
				fp.user_mobile = #{mobile}
				<if test=" null != month and ''!= month  ">
					AND fp.`month`=#{month}
				</if>
			</where>
	</select>
	
	<select id="getFeeDetailRecord" resultType="com.eshop4j.web.response.tc.FeeDetailRecordResponse">
		SELECT
			u.user_name name,
			u.mobile mobile,
			p.product_name productName,
			fd.product_amount investAmt,
			fd.fee_amount feeAmt,
			fd.fee_rate rate,
			fd.fee_type type,
			fd.remark remark, 
			fd.create_time time
		FROM
			`tcim_fee_pay` fp
		LEFT JOIN tcim_feedetail fd ON fp.bill_id = fd.balance_number

		LEFT JOIN tcim_product p ON p.product_id = fd.product_id
		LEFT JOIN tcrm_user_info u ON fd.investor_id = u.user_id
		<where>
			fp.user_mobile = #{mobile}
			AND fp.`month` =  #{month}
			<if test=" null != customerMobile and ''!= customerMobile  ">
				AND u.mobile=#{customerMobile}
			</if>
			<if test=" null != startTime and null != endTime">
				AND fd.create_time  BETWEEN #{startTime} AND #{endTime}
			</if>
		</where>
	</select>
