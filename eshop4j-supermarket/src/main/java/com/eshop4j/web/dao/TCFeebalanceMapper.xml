	<!-- 保存月度或季度佣金汇总明细 -->
	<insert id="insertFeeSummary" >
		INSERT INTO tcim_feesummary (
			biz_id,
			type,
			YEAR,
			moth,
			total_profit,
			fee_profit,
			recommend_profit,
			avg_fee_profit,
			create_time
		) SELECT
			'${bizId}','${type}','${year}','${moth}',
			ifnull(sum(f.fee_amount), 0) f_total_profit,
			ifnull(
				sum(
					CASE
					WHEN f.fee_type = '1001' THEN
						f.fee_amount
					ELSE
						0
					END
				),
				0
			) f_fee_profit,
			ifnull(
				sum(
					CASE
					WHEN f.fee_type = '1002' THEN
						f.fee_amount
					ELSE
						0
					END
				),
				0
			) f_recommend_profit,
			ifnull(sum(f.fee_amount) / '${count}', 0) avg_fee_profit,
			now() create_time
		FROM
			tcim_feedetail f
		WHERE
			f.balance_number IN (
				SELECT
					fb.biz_id
				FROM
					tcim_feebalance fb
				LEFT JOIN tcim_fee_pay fp ON fb.biz_id = fp.bill_id
				WHERE
					fb.`month` = ${bizId}
				AND fp.`status` = 2
			)

		
	
